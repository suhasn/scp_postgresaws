<mvc:View controllerName="com.sap.demo.codecamp.ui.controller.View1" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
						<List id="employeeList" width="auto" items="{EmployeesJSONModel>/}">
							<items>
								<ObjectListItem title="{EmployeesJSONModel>first_name} {EmployeesJSONModel>last_name}" intro="{EmployeesJSONModel>department}" type="Navigation"/>
							</items>
						</List>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
